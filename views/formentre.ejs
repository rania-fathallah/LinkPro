<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/scripts/jquery-3.7.1.min.js"></script>
    <script src="/scripts/script.js"></script>
    <link href="/styles/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/home_page.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Abhaya+Libre:wght@600&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bellota&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Document</title>
</head>

<body style="background-color: #F5EFE7;">

    <nav class="navbar navbar-expand-lg navbar-light  py-3" style="background-color: #F5EFE7;">
        <div class="container">
            <a href="#" class="navbar-brand d-flex align-items-center">
                <i class="fa fa-snowflake-o fa-lg text-primary mr-2"></i>
                <img src="/img/logo.png" alt="Logo" style="max-height: 60px; ">
            </a>
            <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
                class="navbar-toggler">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarSupportedContent" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a href="/" class="nav-link " id="navstyle"> Home </a>
                    </li>
                    <li class="nav-item active">
                        <a href="/ent/about_us" class="nav-link " id="navstyle"> About Us </a>
                    </li>
                    <li class="nav-item active">
                        <a href="/ent/job_search" class="nav-link " id="navstyle"> Job Search </a>
                    </li>
                    <li class="nav-item active">
                        <a href="/ent" class="nav-link " id="navstyle"> Entreprise</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <form action="/" method="post">
        <div class="form">
            <div class="form-holder">
                <div class="row justify-content">
                    <label for="logo-entreprise" class="form-label col-2">Logo : </label>
                    <input type="file" id="logo-entreprise" name="logoentreprise" onchange="previewImage(event)" hidden>
                    <div class="col-8"></div>
                    <img src="/styles/uploadpicture.jpg" id="preview" class="col-2"
                        onclick="document.getElementById('logo-entreprise').click()">
                </div>
                <div>
                    <label for="titre" class="form-label">Title :</label>
                    <input type="text" class="form-control" name="titre" id="titre" value="">
                </div>
                <div>
                    <label for="nomsociete" class="form-label">Company :</label>
                    <input type="text" class="form-control" name="nomsociete" id="nomsociete"
                        placeholder="Exemple : SOTUFAB">
                </div>
                <div>
                    <label for="localisation" class="form-label">Location :</label>
                    <select class="form-select" name="countries" id="location"></select>
                </div>
                <div>
                    <label for="codefiscal" class="form-label">Fiscal Code :</label>
                    <input type="text" class="form-control" name="codefiscal" id="codefiscal">
                </div>
                <div>
                    <label for="type" class="form-label">Offer Type:</label>
                    <select class="form-select" name="type" id="type">
                        <option value="Job">Job</option>
                        <option value="Internship">Internship</option>
                    </select>
                    <br>
                    <select type="text" class="form-select" name="mode" id="mode">
                        <option value="At Company">At Company</option>
                        <option value="Online">Online</option>
                    </select>
                </div>
                <div>
                    <label for="dureetype" class="form-label">Duration :</label>
                    <select type="text" class="form-select" name="dureetype" id="dureetype">
                        <option value="Weeks">Weeks</option>
                        <option value="Months">Months</option>
                        <option value="Years">Years</option>
                    </select>
                </div>
                <div>
                    <label for="dureemin" class="form-label">Minimal Duration :</label>
                    <input type="text" class="form-control" name="dureemin" id="dureemin">
                </div>
                <div>
                    <label for="dureemax" class="form-label">Maximal Duration :</label>
                    <input type="number" class="form-control" name="dureemax" id="dureemax">
                </div>
                <div>
                    <label for="contactp1" class="form-label">Contact :</label>
                    <input type="tel" class="form-control" name="contactp1" id="contactp1" placeholder="Phone Number">
                    <br>
                    <input type="email" class="form-control" name="contacte1" id="contacte1" placeholder="Email">
                </div>
                <div>
                    <label for="dateexp" class="form-label">Expiration Date :</label>
                    <input type="date" class="form-control" name="dateexp" id="dateexp">
                </div>
                <div>
                    <label for="description" class="form-label">Description :</label>
                    <textarea class="form-control" name="description" id="description"></textarea>
                </div>
                <br>
                <div>
                    <button class="btn" type="submit">Submit my Application</button>
                </div>
            </div>
        </div>

    </form>
    <script>
        function previewImage(event) {
            var input = event.target;
            var preview = document.getElementById('preview');

            var reader = new FileReader();
            reader.onload = function () {
                preview.src = reader.result;
                preview.style.display = 'block';
            };

            reader.readAsDataURL(input.files[0]);
        }
    </script>
</body>

</html>